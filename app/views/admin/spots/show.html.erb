<div class="body">
	<div class="container">
		<div class="row">
		<%= render 'admin/links' %>
			<div class="col-md-8 col-md-offset-2">
				<div class="record-spots">
				    <p>
						<strong>場所:</strong>
						<%= link_to spot_path(@spot), class:"spot-name" do %>
							<%= spot.spot_name %>
						<% end %>
					</p>
					<p>
				    	<strong>日付:</strong>
				    	<%= @spot.spot_date %>
				    </p>
					<p>
						<strong>一言感想:</strong>
						<div class="spot-title-show">
							<%= @spot.spot_title %>
						</div>
					</p>
					<strong>お気に入りの一枚</strong>
					<div class="spot-image">
						<%= attachment_image_tag @spot, :spot_image, :fill, 500, 300, format:"jpg", fallback:"/images/no_image.jpg", size:"500*300" %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>