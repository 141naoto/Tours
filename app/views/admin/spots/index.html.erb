<div class="body">
<h2>旅の記録一覧</h2>
<%= render 'admin/links' %>
	<table class="table table-hover table-inverse">
		<thead>
			<tr>
				<th>id</th>
				<th>ユーザー名</th>
				<th>地名</th>
				<th colspan='2'></th>
			</tr>
		</thead>

	<% @spots.each do |spot| %>
		<tbody>
			<tr>
				<td><%= spot.id %></td>
				<td><%= spot.record.user.name %></td>
				<td><%= spot.spot_name %></td>
				<td><%= link_to "詳細", admin_spot_path(spot), class:"btn-sm btn-success" %>
					<%= link_to "削除", admin_spot_path(spot), method: :delete, data: {confirm: "退会させますか?" }, class:"btn-sm btn-danger" %>
				</td>
			</tr>
		</tbody>
	<% end %>
	</table>
</div>