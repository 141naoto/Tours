<div class="body">
	<div class="body" style="margin-left: 100px;">
		<%= link_to "登録", new_admin_place_path, class:"btn btn-danger" %>
		<%= link_to "ユーザー一覧", admin_users_path, class:"btn btn-success" %>
		<h2>編集</h2>
		 <%= form_for(@user) do |f| %>
			 <% if @user.errors.any? %>
			  <div id="error_explanation">
			    <h2><%= @user.errors.count %>件のエラーが発生しました。</h2>
			    <ul>
			      <% @user.errors.full_messages.each do |message| %>
			        <li><%= message %></li>
			      <% end %>
			    </ul>
			   </div>
			 <% end %>
			<div class="edit-user">
				<label>ニックネーム</label>
				<%= f.text_field :name, class:"name", placeholder:"名前" %>
			</div>

			<div class="edit-user">
				<label>アイコン</label>
				<%= f.attachment_field :profile_image, placeholder: "image", class:"user_image" %>
			</div>

			<div class="edit-user">
				<label>自己紹介</label>
				<%= f.text_area :user_introduction, class:"introduction" %>
			</div>

			<div class="action">
				<%= f.submit "更新" %>
			</div>
		<% end %>
	</div>
</div>