<div class="body">
<h2>User一覧</h2>
<%= render 'admin/links' %>
	<table class="table table-hover table-inverse">
		<thead>
			<tr>
				<th>id</th>
				<th>名前</th>
				<th>メールアドレス</th>
				<th colspan='2'></th>
			</tr>
		</thead>

	<% @users.each do |user| %>
		<tbody>
			<tr>
				<td><%= user.id %></td>
				<td><%= user.name %></td>
				<td><%= user.email %></td>
				<td><%= link_to "詳細", admin_user_path(user), class:"btn-sm btn-success" %>
					<%= link_to "削除", admin_user_path(user), method: :delete, data: {confirm: "退会させますか?" }, class:"btn-sm btn-danger" %>
				</td>
			</tr>
		</tbody>
	<% end %>
	</table>
</div>
