<div class="body">
<h1>新規登録</h1>

<%= link_to "観光地一覧", admin_places_path, class:"btn btn-primary" %>
<%= link_to "ユーザー一覧", admin_users_path, class:"btn btn-success" %>

<%= form_for(@place, url: admin_places_path) do |f| %>
	<% if @place.errors.any? %>
	  <div id="error_explanation">
	    <h2><%= @place.errors.count %>件のエラーが発生しました。</h2>
	    <ul>
	      <% @place.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	    </ul>
	   </div>
	 <% end %>

    <div class="new-place">
    	<p>県名</p>
       <%= f.select :prefecture_id, Prefecture.all.map{|u| [u.prefecture, u.id]}, include_blank: true %>
   </div>
	<div class="new-place">
		<label>地名</label>
		<%= f.text_field :place_name %>
	</div>
	<div class="new-place">
        <label>画像</label>
		<%= f.attachment_field :place_image %>
	</div>
	<div class="new-place">
        <label>営業時間</label>
		<%= f.text_area :hours %>
	</div>
    <div class="new-place">
		<label>紹介</label>
		<%= f.text_area :place_introduction %>
	</div>
	<div class="new-place">
		<label>住所</label>
		<%= f.text_area :address %>
	</div>

	<div class="actions">
		<%= f.submit '追加' %>
	</div>
<% end %>
</div>