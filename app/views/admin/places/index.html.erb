<h2>観光地一覧</h2>
<%= link_to "登録", new_admin_place_path, class:"btn btn-danger col-xs-12" %>

<table class="table table-striped">
	<thead>
		<tr>
			<th>id</th>
			<th>名前</th>
			<th>住所</th>
			<th colspan='2'></th>
		</tr>
	</thead>

	<% @places.each do |place| %>
	<tbody>
		<tr>
			<td><%= place.id %></td>
			<td><%= place.place_name %></td>
			<td><%= place.address %></td>
			<td>
				<%= link_to "詳細", admin_place_path(place), class:"btn-sm btn-success" %>
				<%= link_to "削除", admin_place_path(place), method: :delete, data: {confirm: "削除しますか?" }, class:"btn-sm btn-danger" %>
			</td>
		</tr>
	</tbody>
	<% end %>
</table>
