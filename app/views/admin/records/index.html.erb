<div class="body">
<h2>旅の記録一覧</h2>
<%= render 'admin/links' %>
	<table class="table table-hover table-inverse">
		<thead>
			<tr>
				<th>id</th>
				<th>ユーザー名</th>
				<th>タイトル</th>
				<th colspan='2'></th>
			</tr>
		</thead>

	<% @records.each do |record| %>
		<tbody>
			<tr>
				<td><%= record.id %></td>
				<td><%= record.user.name %></td>
				<td><%= record.record_title %></td>
				<td><%= link_to "詳細", admin_record_path(record), class:"btn-sm btn-success" %>
					<%= link_to "削除", admin_record_path(record), method: :delete, data: {confirm: "退会させますか?" }, class:"btn-sm btn-danger" %>
				</td>
			</tr>
		</tbody>
	<% end %>
	</table>
</div>