<div class="body">
	<h2>行きたい一覧</h2>
	<div class="container">
		<div class="row">
			<% @goprefectures.each do |prefecture| %>
				<div class="row">
					<h2><%= prefecture.prefecture %></h2>
					<% prefecture.places.where(id: @goplaces.ids).each do |place| %>
						<div class="col-xs-4">
							<div class="go">
								<h4><%= truncate(place.place_name, length:20) %></h4>
								<%= link_to place_path(place.id) do %>
									<%= attachment_image_tag place, :place_image, :fill, 400, 200, fallback:"/images/no_image.jpg", class:"top-image" %>
								<% end %>
							</div>
						</div>
					<% end %>
				</div>
			<% end %>
		</div>
	</div>
</div>
