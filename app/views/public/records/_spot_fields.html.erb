<div class="nested-fields well well-compact">
  <div class="form-group">
    <div class="prefecture">
    	<p><%= f.label :都道府県 %><br>
        <%= f.select :prefecture_id, Prefecture.all.map{|u| [u.prefecture, u.id]}, include_blank: true %>
      </p>
    </div>

    <p>
      <%= f.label :名前 %><br>
      <%= f.text_field :spot_name %><br>
    </p>
    <p>
      <%= f.label :日付 %>
      <%= f.date_select("spot_date", use_month_numbers: true) %><br>
    </p>
    <p>
      <%= f.label :お気に入りの一枚 %>
      <%= f.attachment_field :spot_image %><br>
    </p>
    <p>
      <%= f.label :一言コメント %><br>
      <%= f.text_field :spot_title, :placeholder => "30字でコメント!", :maxlength =>"30" %><br>
    </p>
    <%= link_to_remove_association "行った場所を削除", f %>
  </div>