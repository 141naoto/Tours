<div class ="user-info">

<h2>ユーザー情報</h2>
<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: "jpg", fallback:"no_image.jpg" %>
<table class="table">
	<tbody>
	<tr></tr>
	<tr>
		<th>ニックネーム</th>
<th><%= @user.name %></th>
</tr>

<tr>
	<th>自己紹介</th>
    <th><%= @user.user_introduction %></th>
</tr>
</tbody>
</table>

<div class="row">
   <% if @user.id == current_user.id %>
     <%= link_to "編集", edit_user_path(@user), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
     <% else %>
     <%= link_to"あ", user_path(current_user.id), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
   <% end %>
</div>
</div>