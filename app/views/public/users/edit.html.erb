<div class="body">
	<div class="body" style="margin-left: 100px;">
	<h2>編集</h2>
		<%= form_for(@user) do |f| %>
			<% if @user.errors.any? %>
				<div id="error_explanation">
					<h2><%= @user.errors.count %>件のエラーが発生しました。</h2>
					<ul>
						<% @user.errors.full_messages.each do |message| %>
							<li><%= message %></li>
						<% end %>
					</ul>
				</div>
			<% end %>

			<div class="record-title">
				<label>ニックネーム</label>
				<%= f.text_field :name, class:"name", class:"ab" %>
				<span class="title-focus-line"></span>
			</div>

			<div class="edit-user">
				<label>アイコン</label>
				<%= f.attachment_field :profile_image, placeholder: "image", class:"user_image" %>
			</div>

			<div class="record-text">
				<label>自己紹介</label>
				<%= f.text_area :user_introduction, class:"cd" %>
				<span class="text-focus-line"></span>
			</div>

			<div class="action">
				<%= f.submit "更新", class:"user-update" %>
			</div>
		<% end %>
	</div>
</div>