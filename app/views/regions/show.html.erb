<div class="container">
	<div class="row">
		<h2><%= @region.region_name %></h2>
		 <% @region.prefectures.each do |prefecture| %>
		  <h3><%= prefecture.prefecture %></h3>
		  <% prefecture.places.each do |place| %>
		  <%= link_to place_path(place.id) do %>
		  <%= place.place_name %>
		  <p><%= attachment_image_tag place, :place_image, :fill, 60, 60, format: "jpg", fallback:"no_image.jpg" %></p>
		  <% end %>
		 <% end %>
		 <% end %>
	</div>
</div>